<% @product.reviews.reverse_each do |review| %>
   <dt>
     <% if current_user && review.user_id.to_i == current_user.id%>
         <%= link_to fa_icon("close"), [@product, Review.find(review.id)], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
     <% end %>
     Review</dt>
   <dd><%= review.description %></dd>
   <dt>Rating</dt>
   <dd><%= review.rating %></dd>
   <br>
 <% end %>
